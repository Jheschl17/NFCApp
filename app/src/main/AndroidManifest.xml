<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.htlgrieskirchen.at.jeschl17.nfcdroid">

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.tags.custom.CustomDataActivity"></activity>
        <activity android:name=".ui.tags.custom.AddressActivity" />
        <activity android:name=".ui.tags.custom.LocationActivity" />
        <activity android:name=".ui.tags.custom.AndroidAppActivity" />
        <activity android:name=".ui.tags.custom.WebsiteLinkActivity" />
        <activity android:name=".ui.tags.custom.TextActivity" />
        <activity android:name=".ui.tags.custom.DataTypeActivity" />
        <activity
            android:name=".ui.tags.TagDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.tags.custom.CustomProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>